<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D2551"
    tools:context=".Activity.GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:elevation="@dimen/_30sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:backgroundTint="#373737">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/photo"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:src="@drawable/man" />

                <TextView
                    android:id="@+id/playerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_19sdp"
                    android:layout_marginTop="@dimen/_65sdp"
                    android:text="Ritesh katre"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_17sdp"
                    android:layout_marginTop="@dimen/_95sdp"
                    android:text="MOVES:"
                    android:textColor="@color/white"

                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/moves"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_69sdp"
                    android:layout_marginTop="@dimen/_95sdp"
                    android:text="00"

                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_220sdp"
                    android:layout_marginTop="@dimen/_95sdp"
                    android:text="TIME:"
                    android:textColor="@color/white"


                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_260sdp"
                    android:layout_marginTop="@dimen/_95sdp"
                    android:text="00:00"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/setting"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_240sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:src="@drawable/baseline_settings_24" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:background="#1D2551">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="269dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_85sdp"
                android:backgroundTint="#5e707e"
                android:elevation="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_10sdp">

                <GridLayout
                    android:id="@+id/group"
                    android:layout_width="match_parent"
                    android:layout_height="269dp"
                    android:background="#373737"
                    android:columnCount="3"
                    android:padding="@dimen/_5sdp"
                    android:rowCount="3">

                    <Button
                        android:id="@+id/btn1"
                        style="@style/ButtonStyle"
                        android:layout_width="18dp"
                        android:layout_height="78dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="@dimen/_2sdp"
                        android:backgroundTint="#5e707e"
                        android:text="1"
                        android:textSize="@dimen/_25sdp"
                        android:textStyle="bold"
                        android:tag="00"/>

                    <Button
                        android:id="@+id/btn2"
                        style="@style/ButtonStyle"
                        android:layout_width="18dp"
                        android:layout_height="78dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="@dimen/_2sdp"
                        android:text="2"
                        android:tag="01"
                        android:textSize="@dimen/_25sdp" />

                    <Button
                        android:id="@+id/btn3"
                        android:tag="02"
                        style="@style/ButtonStyle"
                        android:layout_width="18dp"
                        android:layout_height="78dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="@dimen/_2sdp"
                        android:text="3"
                        android:textSize="@dimen/_25sdp" />

                    <Button
                        android:id="@+id/btn4"
                        style="@style/ButtonStyle"
                        android:layout_width="18dp"
                        android:layout_height="78dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="@dimen/_2sdp"
                        android:text="4"
                        android:tag="10"
                        android:textSize="@dimen/_25sdp" />

                    <Button
                        android:id="@+id/btn5"
                        style="@style/ButtonStyle"
                        android:layout_width="18dp"
                        android:layout_height="78dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:tag="11"
                        android:layout_margin="@dimen/_2sdp"
                        android:text="5"
                        android:textSize="@dimen/_25sdp" />

                    <Button
                        android:id="@+id/btn6"
                        style="@style/ButtonStyle"
                        android:layout_width="18dp"
                        android:layout_height="78dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="@dimen/_2sdp"
                        android:tag="12"
                        android:text="6"
                        android:textSize="@dimen/_25sdp" />

                    <Button
                        android:id="@+id/btn7"
                        style="@style/ButtonStyle"
                        android:layout_width="18dp"
                        android:tag="20"
                        android:layout_height="78dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="@dimen/_2sdp"
                        android:text="7"
                        android:textSize="@dimen/_25sdp" />

                    <Button
                        android:id="@+id/btn8"
                        style="@style/ButtonStyle"
                        android:layout_width="18dp"
                        android:layout_height="78dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:tag="21"
                        android:layout_margin="@dimen/_2sdp"
                        android:text="8"
                        android:textSize="@dimen/_25sdp" />

                    <Button
                        android:id="@+id/btn9"
                        style="@style/ButtonStyle"
                        android:layout_width="18dp"
                        android:tag="22"
                        android:layout_height="78dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="@dimen/_2sdp"
                        android:text=""
                        android:textSize="@dimen/_25sdp" />
                </GridLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/pause"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_30sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PAUSE"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView><androidx.cardview.widget.CardView
                android:id="@+id/shuffleNumbers"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_180sdp"
                android:layout_marginTop="-33dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SHUFFLE"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>